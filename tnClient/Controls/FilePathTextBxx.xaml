<UserControl x:Class="tnClient.Controls.FilePathTextBxx"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tnClient.Controls"
             xmlns:acuc="clr-namespace:AutoCoder.Controls;assembly=AutoCoder"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot">
    <DockPanel LastChildFill="True">
      <Button x:Name="butOpenFileDialog" DockPanel.Dock="Right"
                Margin="3,3" Padding="3"
                Content="..."
                Click="butOpenFileDialog_Click" />
      <TextBox       HorizontalAlignment="Stretch" VerticalAlignment="Center"
                     Text="{Binding Path=FilePathText,UpdateSourceTrigger=PropertyChanged}" />
    </DockPanel>
    </Grid>
</UserControl>
