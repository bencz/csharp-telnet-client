<UserControl x:Class="AutoCoder.Controls.BorderTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoCoder.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Border x:Name="border1" Padding="2" BorderThickness="0.5" Background="YellowGreen" BorderBrush="Black">
    <TextBlock Text="{Binding Path=Text}"  HorizontalAlignment="{Binding Path=HorizontalAlignment}" />
  </Border>

</UserControl>
